<Window x:Class="CrystalEditor.MainWindow"
        xmlns:avalonDock="https://github.com/Dirkster99/AvalonDock"
        xmlns:avalonDockLayout="clr-namespace:AvalonDock.Layout;assembly=AvalonDock"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CrystalEditor" 
        xmlns:Utils="clr-namespace:CrystalEditor.Utils"
        mc:Ignorable="d"
        Title="Crystal" Height="450" Width="800">
    <Grid>
        <Grid>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid>
                    <Utils:RenderSurfaceView Grid.Row="0" Margin="0,0,0,-75"/>
                </Grid>
                <Grid Grid.Row="1" Margin="0,0,0,0">
                    <Utils:LoggerView Margin="0,75,0,0"/>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
